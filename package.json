{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:production": "lerna bootstrap -- --production --no-optional",
    "link": "lerna link",
    "build": "lerna run build",
    "build:balance": "lerna run build --scope @abx/exchange-balance-service --include-dependencies",
    "build:reference-data": "lerna run build --scope @abx/exchange-reference-data-service --include-dependencies",
    "build:reports": "lerna run build --scope @abx/exchange-report-service --include-dependencies",
    "build:scheduler": "lerna run build --scope @abx/exchange-scheduler-service --include-dependencies",
    "build:withdrawal": "lerna run build --scope @abx/exchange-withdrawal-service --include-dependencies",
    "build:notification": "lerna run build --scope @abx/exchange-notification-service --include-dependencies",
    "build:debit-card": "lerna run build --scope @abx/order-service --include-dependencies",
    "build:order": "lerna run build --scope @abx/order-service --include-dependencies",
    "build:market-data": "lerna run build --scope @abx/exchange-market-data-service --include-dependencies",
    "build:deposit": "lerna run build --scope @abx/exchange-deposit-service --include-dependencies",
    "build:admin-fund-management": "lerna run build --scope @abx/admin-fund-management-service --include-dependencies",
    "build:account": "lerna run build --scope @abx/exchange-account-data-service --include-dependencies",
    "build:services": "lerna run build --scope @abx/*",
    "build:docs": "lerna run build:docs",
    "run-legacy-migrations:test": "lerna run run-legacy-migrations-test",
    "run-migrations:test": "lerna run run-migrations:test --stream",
    "run-legacy-migrations:dev": "lerna run run-legacy-migrations-dev",
    "run-migrations:dev": "lerna run run-migrations:dev --stream",
    "start-api-debug:dev": "cd packages/services/_local-service-starter && npm run start-api-debug:dev",
    "start-api-debug:e2e": "cd packages/services/_local-service-starter && npm run start-api-debug:e2e-local",
    "start-api-debug-debit-card:dev": "npm start-api-debug:dev run lerna run start-api-debug-debit-card:dev --stream",
    "start-api-debug-debit-card:e2e": "start-api-debug:e2e lerna run start-api-debug-debit-card:e2e-local --stream",
    "push-api-docs-to-s3": "lerna run push-api-docs-to-s3"
  },
  "devDependencies": {
    "@lerna/filter-options": "^3.18.4",
    "lerna": "^3.19.0",
    "mocha": "5.2.0",
    "prettier": "1.19.1",
    "typescript": "3.7.2",
    "request": "2.88.0"
  }
}
