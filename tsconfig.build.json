{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom", "es2017"],
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist"]
}