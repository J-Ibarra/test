{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom", "es2017"],
    "target": "es6",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "express": "4.16.4",
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/__integration-tests__/**/*.ts",
    "**/__tests__/**/*.ts",
    "**/__tests__/*.ts",
    "**/tests/*.ts",
    "**/test/*.ts"
  ]
}
