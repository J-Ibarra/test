{
  "name": "nest-1",
  "version": "0.0.1",
  "description": "The Kinesis Exchange Debit Card Service",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "db-start": "docker-compose down && docker-compose up -d",
    "db-stop": "docker-compose down",
    "start:local-e2e": "cross-env ENV=e2e-local DEBIT_CARD_KYC_CHECK_INTERVAL=3000 concurrently --handle-input \"wait-on dist/src/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:dev": "cross-env ENV=dev concurrently --handle-input \"wait-on dist/src/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:dev:debug": "cross-env ENV=dev nodemon --config nodemon-debug.json",
    "prestart:prod": "npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "cross-env NEW_RELIC_NO_CONFIG_FILE=true NEW_RELIC_ENABLED=false ENV=TEST jest --passWithNoTests --forceExit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest.js --runInBand --forceExit",
    "test:integration": "cross-env ENV=TEST NEW_RELIC_NO_CONFIG_FILE=true NEW_RELIC_ENABLED=false jest --config ./integration-tests/jest-integration.json --passWithNoTests --forceExit --runInBand",
    "test:integration:debug": "cross-env ENV=TEST NEW_RELIC_NO_CONFIG_FILE=true NEW_RELIC_ENABLED=false node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./integration-tests/jest-integration.json --forceExit",
    "test:integration:ci": "cross-env ENV=CI NEW_RELIC_NO_CONFIG_FILE=true NEW_RELIC_ENABLED=false jest --config ./integration-tests/jest-integration.json --passWithNoTests --forceExit --runInBand"
  },
  "dependencies": {
    "@abx/ke-auth-lib": "^0.1.8",
    "@godaddy/terminus": "^4.1.2",
    "@hapi/joi": "^15.0.3",
    "@nestjs/common": "^6.2.4",
    "@nestjs/core": "^6.0.0",
    "@nestjs/microservices": "^6.2.4",
    "@nestjs/platform-fastify": "^6.2.4",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/terminus": "^6.3.0",
    "@nestjs/typeorm": "^6.1.1",
    "@types/redis": "^2.8.13",
    "aws-sdk": "^2.574.0",
    "bluebird": "^3.5.5",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "decimal.js": "10.2.0",
    "epicurus-node": "^0.3.0",
    "fastify-cookie": "^3.0.2",
    "fastify-swagger": "^2.4.0",
    "helmet": "^3.18.0",
    "i18n-iso-countries": "^4.3.1",
    "moment": "^2.24.0",
    "newrelic": "^5.10.0",
    "node-redis-warlock": "^0.2.0",
    "pg": "^7.11.0",
    "qs": "^6.7.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.17",
    "uuid-random": "^1.0.9",
    "warlock": "^0.1.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/jest": "^23.3.13",
    "@types/joi": "^14.3.3",
    "@types/newrelic": "^4.11.0",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "fastify": "^2.4.1",
    "husky": "^2.3.0",
    "jest": "^24.0.2",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.11.1",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.0.1",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tslint -p tsconfig.json -c tslint.json --fix",
      "post-commit": "git update-index --again"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bullioncapital/foo.git"
  }
}
